---
import SocialPill from "./SocialPill.astro";
import GithubIcon from "../Icons/GithubIcon.astro";
import LinkedinIcon from "../Icons/LinkedinIcon.astro";
import MailIcon from "../Icons/MailIcon.astro";

const data_en = {
  Position: "Web Developer.",
  Experience: " +3 years of Experience.",
  Student: "Computer Engineering Student.",
  href: "/portfolio/MikaelFernandez-Resume.pdf"
};
const data_es = {
  Position: "Desarrollador Web.",
  Experience: " +3 años de Experiencia.",
  Student: "Estudiante de Ingeniería Informática.",
  href: "/portfolio/MikaelFernandez-CV.pdf"
};

const data = Astro.props.lang === "en" ? data_en : data_es;
---

<section id="about" class="section w-full mx-auto py-44 px-4 md:px-0">
  <h1
    class="text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6"
  >
    Mikael Fernandez
  </h1>
  <p
    class="text-xl lg:text-2xl text-balance text-red-800 dark:text-red-200 w-full md:w-[720px]"
  >
    {data.Position}<span class="text-yellow-200"> {data.Experience}</span>
    <span class="text-sky-800 dark:text-sky-200">{data.Student}</span>
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="https://www.linkedin.com/in/mikael-fernandez/">
      <LinkedinIcon />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/mycahh">
      <GithubIcon />
      Github
    </SocialPill>
    <SocialPill href={data.href}>
      <MailIcon />
      Resume
    </SocialPill>
    <SocialPill type="mail">
      <MailIcon />
      mikaelfernandezj.p@gmail.com
    </SocialPill>
  </nav>
</section>

<style>
  section {
    max-width: 1000px;
  }

  nav {
    max-width: 600px;
  }
</style>
